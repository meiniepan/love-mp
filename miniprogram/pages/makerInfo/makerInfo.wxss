/* pages/makerInfo/makerInfo.wxss */
.item{
    margin: 20rpx var(--titlePadding);
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    border-radius: 20rpx;
    border: solid 1rpx var(--themeColor);
}
.bottom{
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    flex-direction: row-reverse;
    height: 84rpx;
    background: var(--grayF6);
}
.confirm{
    display: flex;
    width: 172rpx;
    height: 100%;
    background: var(--themeBac);
    color: var(--white);
    align-items: center;
    justify-content: center;
}

.btn2{
    width: 400rpx;
    margin-bottom: 20rpx;}
.input{
    margin: 0rpx var(--titlePadding) 20rpx ;
    border: solid 1rpx var(--themeColor);
    border-radius: 10rpx;
    padding: 10rpx;
}
.mark-out{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
}