<view class='head'>
  <view class="fistIcon">
    <image class="logo" src="../../images/user-unlogin.png"></image>
    <text>封面头像</text>
    <image class="changeIcon" src="../../images/change_icon.png"></image>
  </view>
  <view class="photos">
    <view class="title">相册
      <text>(最多8张)</text>
    </view>
    <view class="images">
      <view class="img">
        <image class="addImageBtn" src="../../images/add_images_btn.png"></image>
        <image class="removeImageBtn" src="../../images/remove_images_btn.png"></image>
      </view>
      <view class="img">
        <image class="addImageBtn" src="../../images/add_images_btn.png"></image>
      </view>
    </view>
  </view>
</view>

<view class="baseInfo">
  <view class="infoTitle">基本资料</view>
  <view class="infoCell2">
    <text class="left hint">昵称</text>
    <input data-type="nickName" class="nickName right" placeholder="请输入您的昵称" bindinput="doInput" maxlength="8"></input>
  </view>
  <view class="infoCell">
    <text class="left">性别</text>
    <text class="right">{{sex}}</text>
  </view>

  <view class="infoCell">
    <text class="left">生日</text>
    <picker data-type="birthday"  mode="date" value="" bindchange="bindDateChange">
      <view class="birthday">
        {{mData.birthday}}
      </view>
      <image class="right_gay" src="../../images/right_gay.png"></image>
    </picker>
  </view>


  <view class="infoCell">
    <text class="left">身高</text>
    <picker data-type="height" data-data="{{heightForPerson}}" value="{{height}}" range="{{heightForPerson}}" bindchange="bindHeightChange">
      <view class="birthday">
        {{mData.height}}
      </view>
      <image class="right_gay" src="../../images/right_gay.png"></image>
    </picker>
  </view>

  <view class="infoCell">
    <text class="left">工作地区</text>
    <picker data-type="workPlace" mode="region" bindchange="bindRegionChange" value="{{region}}">
      <view class="birthday">
        {{mData.workPlace}}
      </view>
      <image class="right_gay" src="../../images/right_gay.png"></image>
    </picker>
  </view>


  <view class="introduce bottom">
    <text class="left hint">内心独白</text>
    <textarea data-type="introduce" class="intro" bindinput="doInput" placeholder="介绍一下你自己吧~" ></textarea>
  </view>

</view>

<view class="tabItemView" id="tabItemView">
  <view class="item {{tabItemViewFix?'itemFix':''}}">
    <view catchtap="changeItemData" data-id="0" class="item_title left">
      <text>个人信息</text>
      <view wx:if='{{tabItemAt==0}}' class="line"></view>
    </view>
    <view catchtap="changeItemData" data-id="1" class="item_title right">
      <text>择偶条件</text>
      <view wx:if='{{tabItemAt==1}}' class="line"></view>
    </view>

    <view class="descMessege">完善相亲信息，能大幅度提升曝光度和匹配度哦~</view>
  </view>
  <info-items class="{{tabItemViewFix?'itemFixCell':''}}" bindchangeData="changeData" isSelf="{{tabItemAt==0}}"></info-items>
</view>