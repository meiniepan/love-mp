/* pages/userConsole/userConsole.wxss */



.head{
  display: flex;
  flex-direction: column;
  height: 600rpx;
  align-items: center;
}
.head image{
  height: 100%;
  width: 100%;
}
.listItem{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #333;
  padding-left: 30rpx;
  line-height: 100rpx;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #efefef;
}
.bottomView {
  position: fixed;
  bottom: 20rpx;
  height: 100rpx;
  width: 100%;
  background-color: white;
  display: flex;
  color: white;
  font-size: 25rpx;
  padding-top: 10rpx;
}
.bottomView button {
  width: 250rpx;
  height: 80rpx;
  color: white;
  border-radius: 40rpx;
  border: 1rpx solid var(--themeColor);
  background: var(--themeColor);
}


