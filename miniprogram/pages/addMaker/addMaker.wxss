.input{
    margin: 0rpx var(--titlePadding) 20rpx ;
    border: solid 1rpx var(--themeColor);
    border-radius: 10rpx;
    padding: 10rpx;
}
.bottom{
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    flex-direction: row-reverse;
    height: 84rpx;
    background: var(--grayF6);
}
.confirm{
    display: flex;
    width: 172rpx;
    height: 100%;
    background: var(--themeBac);
    color: var(--white);
    align-items: center;
    justify-content: center;
}